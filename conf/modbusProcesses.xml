<system>
    <edge hostname="omms-edge-demo">
        <processes>
            <!-- modbusProcess runs per tty device -->
            <process type="modbus" id="0x0001" start="yes" tag="ModbusA" ttyDevice="auto"
                devSerialPath="" >
                <!-- process type specific args -->
                <args broker="ip:=10.0.0.130:1883" uid="" pwd="" />
                <meters>
                    <meter busType="modbus" busAddress="2" brand="orno" modelXML="orno504.xml" />
                    <meter busType="modbus" busAddress="3" brand="orno" modelXML="orno504.xml" />
                    <meter busType="modbus" busAddress="4" brand="orno" modelXML="orno504.xml" />
                    <meter busType="modbus" busAddress="5" brand="orno" modelXML="orno504.xml" />
                    <meter busType="modbus" busAddress="6" brand="orno" modelXML="orno504.xml" />
                    <meter busType="modbus" busAddress="7" brand="orno" modelXML="orno504.xml" />
                </meters>
                <processorJobs>
                    <job type="registerStream" startIndex="1"  streamType="kWhrs" intervalMins="6" />
                    <job type="registerStream" startIndex="2"  streamType="basicPwrStats" intervalMins="2" />
                </processorJobs>
            </process>
            <process type="mqtt" id="0x0001" start="yes" tag="ModbusA">
                <!-- process type specific args -->
                <args broker="ip:=10.0.0.130:1883" uid="" pwd="" />
                <meters>
                    <meter busType="mqtt" busAddress="46" brand="orno" modelXML="orno516.xml" />
                </meters>
                <processorJobs>
                    <job type="registerStream" startIndex="1" streamType="kWhrs" intervalMins="6" />
                    <job type="registerStream" startIndex="2" streamType="basicPwrStats" intervalMins="2" />
                </processorJobs>
            </process>
        </processes>
    </edge>
